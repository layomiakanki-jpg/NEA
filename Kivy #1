import kivy
from kivy.app import App
from kivy.uix.label import Label
from kivy.uix.gridlayout import GridLayout
from kivy.uix.textinput import TextInput
from kivy.uix.button import Button


class MyGridLayout(GridLayout):
    def __init__(self, **kwargs):
        super().__init__(**kwargs)

        # Set columns
        self.cols = 1

        # Name
        self.add_widget(Label(text="Name: "))
        self.name = TextInput(multiline=False)
        self.add_widget(self.name)

        # Bank
        self.add_widget(Label(text="Bank: "))
        self.bank = TextInput(multiline=False)
        self.add_widget(self.bank)

        # Password
        self.add_widget(Label(text="Password: "))
        self.password = TextInput(multiline=False, password=True)
        self.add_widget(self.password)

        # Submit Button
        self.add_widget(Label())  # Empty space
        self.submit = Button(text="Submit", font_size = 32)
        self.submit.bind(on_press=self.press)
        self.add_widget(self.submit)

    def press(self,instance):
        name = self.name.text
        bank = self.bank.text
        password = self.name.text
        # print(f'Hello {name},your bank is {bank}')
        #print it to the screen
        self.add_widget(Label(text=(f'Hello {name}, your bank is {bank}')))

        #clear input boxes
        self.name.text =""
        self.bank.text = ""
        self.password.text = ""
class MyApp(App):
    def build(self):
        return MyGridLayout()


if __name__ == "__main__":
    MyApp().run()
